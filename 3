#include <iostream>
using namespace std;

int main() {
    
    setlocale(LC_ALL, "RU");
    
    int arr[] = {1, 0, 4, 5, 0, 9};
    const int n = sizeof(arr) / sizeof(int);
    
    cout << "Исходный массив" << endl;
    for (int i = n - 1; i >= 0; i--){
        cout << arr[i] << " ";
    }
    
    cout << endl;
    
    for (int i = 0; i < n; i++){
       for (int j = i + 1; j < n; j++){
           if (arr[j] == 0){
               int tmp = arr[j];
                arr[j] = arr[i];
                arr[i] = tmp;
           }
       }
    }
    
    cout << "Отсортированный массив" << endl;
    for (int i = n - 1; i >= 0; i--){
        cout << arr[i] << " ";
    }
}
